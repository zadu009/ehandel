{
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "mailservice-production.up.railway.app/:path*"
        },
        {
            "source": "/api/:path*/",
            "destination": "mailservice-production.up.railway.app/:path*/"
        },
        {
            "source": "/api/:path(.*)",
            "destination": "mailservice-production.up.railway.app/:path"
        },
        {
            "source": "/api/:path(.*)",
            "destination": "mailservice-production.up.railway.app/:path"
        }
    ]
}